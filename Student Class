
public class Student {
	
  //variables
	private String first, last;
	private int age, grade;
	private char gender;
	private float score;
	
	//constructors
	public Student(){
		first = " ";
		last = " ";
		age = 0;
		grade = 0;
		gender = ' ';
		score = (float) 0.00;
	}
	
	public Student(String name1, String name2, int years, char sex, int schoolLvl, float percent){
		first = name1;
		last = name2;
		age = years;
		gender = sex;
		grade = schoolLvl;
		score = percent;
	}
	
	//methods
	public String studentReport(){
		String data;
		data = first + "\t" + last + "\t" + age + "\t" + gender + "\t" + grade + "\t" + score;		
		return data;
	}
	
	
	public String getFirst() { 
		return first;
	}
	
	public String getLast() {
		return last;
	}
	
	public int getAge() {
		return age;
	}
	
	public int getGrade() {
		return grade;
	}
	
	public char getGender() {
		return gender;
	}
	
	public float getScore() {
		return score;
	}
}
